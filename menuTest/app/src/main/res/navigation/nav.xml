<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.menutest.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_myDialogFragments"
            app:destination="@id/myDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.menutest.Frag1"
        android:label="Frag1" />
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.menutest.Frag2"
        android:label="Frag2" />
    <dialog
        android:id="@+id/myDialogFragment"
        android:name="com.example.menutest.MyDialogFragments"
        android:label="MyDialogFragments" />
</navigation>